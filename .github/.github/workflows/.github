name: 🚀 Deploy FortressApp Pro to EC2

on:
  push:
    branches:
      - thefortressapp.pro

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: 📥 Checkout code
      uses: actions/checkout@v3

    - name: 🔐 Set up SSH key
      run: |
        echo "${{ secrets.EC2_KEY }}" > key.pem
        chmod 400 key.pem

    - name: 🚀 Deploy to EC2
      run: |
        ssh -o StrictHostKeyChecking=no -i key.pem ${{ secrets.EC2_USER }}@${{ secrets.EC2_HOST }} << 'EOF'
          set -e
          cd /var/www/thefortressapp || sudo mkdir -p /var/www/thefortressapp && cd /var/www/thefortressapp
          git init || true
          git remote remove origin || true
          git remote add origin https://github.com/aqsa326/fortressapp-pro.git
          git fetch origin thefortressapp.pro
          git checkout -f thefortressapp.pro
          sudo systemctl reload nginx || echo "NGINX not reloaded"
        EOF
